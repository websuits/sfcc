<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<group formid="customer">
		<field
			formid="firstname"
			label="label.input.firstname.profile"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

		<field
			formid="lastname"
			label="label.input.lastname.profile"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			range-error="error.message.50orless"
			type="string" />

		<field
		formid="address1"
		label="label.input.address1.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.address1.profile.form"
		type="string"/>

		<field
		formid="address2"
		label="label.input.address2.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.address2.profile.form"
		type="string"/>

		<field
			formid="states"
			label="label.input.states.profile"
			type="string"
			mandatory="true"
			binding="states"
			missing-error="error.message.required"
			value-error="address.field.invalid">
				<options>
					<option optionid=""     label="resource.select"         value=""/>
					<option optionid="AB"   label="states.AB" value="AB"/>
					<option optionid="BC"   label="states.BC" value="BC" />
					<option optionid="CI"   label="states.CI" value="CI" />
					<option optionid="CM"   label="states.CM" value="CM" />
					<option optionid="ER"   label="states.ER" value="ER" />
					<option optionid="FV"   label="states.FV" value="FV" />
					<option optionid="LG"   label="states.LG" value="LG" />
					<option optionid="LM"   label="states.LM" value="LM" />
					<option optionid="LZ"   label="states.LZ" value="LZ" />
					<option optionid="MH"   label="states.MH" value="MH" />
					<option optionid="ML"   label="states.ML" value="ML" />
					<option optionid="PM"   label="states.PM" value="PM" />
					<option optionid="PU"   label="states.PU" value="PU" />
					<option optionid="SC"   label="states.SC" value="SC" />
					<option optionid="SD"   label="states.SD" value="SD" />
					<option optionid="TC"   label="states.TC" value="TC" />
					<option optionid="TT"   label="states.TT" value="TT" />
					<option optionid="UM"   label="states.UM" value="UM" />
					<option optionid="VD"   label="states.VD" value="VD" />
					<option optionid="VN"   label="states.VN" value="VN" />
				</options>
		</field>

		<field
			formid="country"
			label="label.input.country.profile"
			type="string"
			mandatory="true"
			binding="country"
			missing-error="error.message.required"
			value-error="address.field.invalid">
				<options>
					<option optionid=""     label="resource.select"         value=""/>
					<option optionid="AB"   label="country.AB" value="AB"/>
					<option optionid="BC"   label="country.BC" value="BC" />
					<option optionid="CI"   label="country.CI" value="CI" />
					<option optionid="CM"   label="country.CM" value="CM" />
					<option optionid="ER"   label="country.ER" value="ER" />
					<option optionid="FV"   label="country.FV" value="FV" />
					<option optionid="LG"   label="country.LG" value="LG" />
					<option optionid="LM"   label="country.LM" value="LM" />
					<option optionid="LZ"   label="country.LZ" value="LZ" />
					<option optionid="MH"   label="country.MH" value="MH" />
					<option optionid="ML"   label="country.ML" value="ML" />
					<option optionid="PM"   label="country.PM" value="PM" />
					<option optionid="PU"   label="country.PU" value="PU" />
					<option optionid="SC"   label="country.SC" value="SC" />
					<option optionid="SD"   label="country.SD" value="SD" />
					<option optionid="TC"   label="country.TC" value="TC" />
					<option optionid="TT"   label="country.TT" value="TT" />
					<option optionid="UM"   label="country.UM" value="UM" />
					<option optionid="VD"   label="country.VD" value="VD" />
					<option optionid="VN"   label="country.VN" value="VN" />
				</options>
		</field>


		<field
		formid="postal"
		label="label.input.postal.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.postal.profile.form"
		type="string"/>

		<field
		formid="phone"
		label="label.input.phone.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.phone.profile.form"
		type="string"/>


		<field
		formid="comment"
		label="label.input.comment.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.comment.profile.form"
		type="string"/>


		<field
		formid="card"
		label="label.input.card.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.card.profile.form"
		type="string"/>

		<field
		formid="code"
		label="label.input.code.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.code.profile.form"
		type="string"/>

		<field
		formid="expmonth"
		label="label.input.expmonth.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.expmonth.profile.form"
		type="string"/>

		<field
		formid="expyear"
		label="label.input.expyear.profile"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.expyear.profile.form"
		type="string"/>

		<field
			formid="email"
			label="label.input.email.profile"
			mandatory="true"
			max-length="50"
			missing-error="error.message.required"
			parse-error="error.message.parse.email.profile.form"
			range-error="error.message.50orless"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
			value-error="ValueErrorText"
			type="string"/>
			<!-- TODO value-error not comming back from the platform -->
    </group>
</form>
